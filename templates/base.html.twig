<!DOCTYPE html>
<html lang="en-GB">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Node Magister{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header>
            <div class="jumbotron text-center mb-0" id="home-background">
                <img src="{{ asset('images/logo/logo-node-magister.png') }}" alt="node-magister">
                <h5>Any sufficiently advanced technology is indistinguishable from magic</h5>
                <div class="text-center">
                    <h6><i>Arthur C. Clarke</i></h6>
                </div>
            </div>
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                <a class="navbar-brand" href="{{ path('home') }}">Node Magister</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto ml-3">
                        {# <li class="nav-item active">
                            <a class="nav-link" href="{{ path('home') }}">Home</a>
                        </li> #}
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('cryptocurrency_index') }}">Cryptocurrencies</a>
                        </li>
                        {% if app.user %}
                            <li class="nav-item active">
                                <a class="nav-link" href="{{ path('masternode_index') }}">Masternode</a>
                            </li>
                        {% endif %}
                        <li class="nav-item">
                            <a class="nav-link disabled" href="#">Wallet</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled" href="#">Support/Ticket</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled" href="#">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="{{ path('contact') }}">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled" href="#">FAQ</a>
                        </li>
                        {% if app.user and is_granted("ROLE_ADMIN") %}
                            <li class="nav-item active">
                                <a class="nav-link" href="{{ path('admin') }}">Administration</a>
                            </li>
                        {% endif %}
                    </ul>
                    <ul class="navbar-nav ml-auto mr-5">
                        <li class="nav-item d-flex align-items-center">
                            <a class="app-button nav-link" href="/login">
                                {% if app.user %}
                                    <a href="{{ path('app_logout') }}">
                                        <button class="btn btn-dark btn-sm">Logout</button>
                                    </a>
                                {% else %}
                                    <a href="{{ path('app_login') }}" class="mr-2">
                                        <button class="btn btn-dark btn-sm">Login</button>
                                    </a>
                                    <a href="{{ path('app_register') }}">
                                        <button class="btn btn-outline-light btn-sm">Register</button>
                                    </a>
                                {% endif %}
                            </a>
                        </li>
                        <li class="nav-item active">
                            {% if app.user %}
                                <a class="nav-link" href="{{ path('account') }}">Account</a>
                            {% endif %}
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        {% block body %}{% endblock %}
        <footer class="mt-5 pt-5 pb-5 footer">
            <div class="container">
            <div class="row">
