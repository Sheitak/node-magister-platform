{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <form class="card w-50 center mx-auto my-5 p-3">
        <h5 class="mx-auto my-2">Reset your password</h1>
        {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}
            <div class="mx-auto">
                <small class="font-italic mx-auto">
                    Enter your email address and we we will send you a
                    link to reset your password.
                </small>
            </div>
            <button class="btn btn-primary my-2 mx-auto">Send password reset email</button>
        {{ form_end(requestForm) }}
    </form>
{% endblock %}