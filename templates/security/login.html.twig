{% extends 'base.html.twig' %}

{% block title %}Login Magister{% endblock %}

{% block body %}
<form method="post" class="card w-50 center mx-auto my-5 p-3">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal mx-auto">Please login, We are happy to see you again !</h1>
    <label for="inputEmail" class="font-weight-bold mt-3">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
    <label for="inputPassword" class="font-weight-bold mt-3">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
    <div class="text-center">
        <button class="btn btn-lg btn-primary w-25 my-3" type="submit">
            Sign in
        </button>
    </div>
    <a href="{{ path('app_forgot_password_request') }}" class="font-italic text-decoration-none">Forgot your password link ?</a>
</form>
{% endblock %}
